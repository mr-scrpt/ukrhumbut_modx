<label class="input-group input-group_type_{$split}">
    <div class="input-group__inner">
        <div class="input-group__title">
            <span for="" class="input-group__text">{$title}</span>
        </div>
        <div class="input-group__box">
            <span class="input {$theme} {$size} {$other}">
                <span class="input__box">
                    <input class="input__control" name="{$name}">
                </span>
            </span>
        </div>
        <div class="input-group__error">{$errorText}</div>
    </div>
</label>
